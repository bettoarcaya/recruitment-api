{
    "openapi": "3.0.0",
    "info": {
        "title": "Recruitment API",
        "version": "1.0"
    },
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "Registration"
                ],
                "summary": "Registrar un cantidato",
                "description": "",
                "operationId": "register",
                "requestBody": {
                    "description": "Informacion necesaria del candidato",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "Person": {
                                        "items": {
                                            "$ref": "#/components/schemas/Person"
                                        }
                                    },
                                    "Background": {
                                        "items": {
                                            "$ref": "#/components/schemas/Background"
                                        }
                                    },
                                    "Work-experience": {
                                        "items": {
                                            "$ref": "#/components/schemas/WorkExperience"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Candidato registrado de manera satisfactoria"
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Background": {
                "properties": {
                    "academic_level": {
                        "type": "string",
                        "example": "University"
                    },
                    "academic_espec": {
                        "type": "string",
                        "example": "Back-end Developer"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Background"
                }
            },
            "Person": {
                "required": [
                    "firstname",
                    "lastname",
                    "email",
                    "gender",
                    "born_date"
                ],
                "properties": {
                    "firstname": {
                        "type": "string",
                        "example": "Jhon"
                    },
                    "lastname": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "Jhondoe@mail.com"
                    },
                    "gender": {
                        "type": "string",
                        "example": "gender"
                    },
                    "born_date": {
                        "type": "string",
                        "example": "YYYY-MM-DD"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Person"
                }
            },
            "WorkExperience": {
                "properties": {
                    "time": {
                        "type": "string",
                        "example": "5 Years"
                    },
                    "position": {
                        "type": "string",
                        "example": "Backend lead developer"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "WorkExperience"
                }
            }
        }
    }
}